        <!--CSS STYLE -->
        <style>
            .main{
    width: 400px;
    height: 400px ;
    border: 2px solid black;
    margin: auto;
    position: relative;
}
.box{
    width: 200px;
    height: 200px;
    background-color: blue;
    position: absolute;
    top: 0px;
    left: 0px;
    animation: box;
    animation-duration: 5s;
    animation-delay: 1s;
    animation-iteration-count: 2;
    animation-direction: alternate;
    animation-fill-mode: both;
}
@keyframes box{
    0%{
        top: 0px;
        left:0px;
        background-color: blue;
    }
    25%{
        top:0px;
        left: 200px;
        background-color: aqua;

    }
    50%{
        top:200px;
        left:200px;
        background-color: black;
    }
    75%{
        top:200px;
        left:00px; 
        background-color: blueviolet; 
    }
    

}
        </style>
    </head>
